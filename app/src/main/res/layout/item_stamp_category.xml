<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/stamp_category_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cake_plain"
        android:textColor="@color/primary_text_inverse"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/stamp_category_vertical_margin"
        android:longClickable="false"
        android:singleLine="true"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/stamp_category_imageview_1"
        android:layout_width="@dimen/stamp_category_thumnail_size"
        android:layout_height="@dimen/stamp_category_thumnail_size"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/stamp_category_vertical_margin" />

    <ImageView
        android:id="@+id/stamp_category_imageview_2"
        android:layout_width="@dimen/stamp_category_thumnail_size"
        android:layout_height="@dimen/stamp_category_thumnail_size"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/stamp_category_vertical_margin" />

    <ImageView
        android:id="@+id/stamp_category_imageview_3"
        android:layout_width="@dimen/stamp_category_thumnail_size"
        android:layout_height="@dimen/stamp_category_thumnail_size"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/stamp_category_vertical_margin" />
</LinearLayout>