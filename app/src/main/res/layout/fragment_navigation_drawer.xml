<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navdrawer_background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/drawer_layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawer_imageview_mood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/drawer_imageview_icon"
            android:layout_width="@dimen/navigation_drawer_logo_size"
            android:layout_height="@dimen/navigation_drawer_logo_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/actionbar_horizontal_margin"
            android:layout_marginRight="@dimen/actionbar_horizontal_margin"
            android:layout_gravity="bottom|left" />

    </FrameLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/drawer_listview_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

