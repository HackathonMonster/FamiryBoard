<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/navigation_drawer_menu_horizontal_padding"
    android:paddingTop="@dimen/navigation_drawer_menu_vertical_padding"
    android:paddingBottom="@dimen/navigation_drawer_menu_vertical_padding">

    <ImageView
        android:id="@+id/item_drawer_menu_imageview"
        android:layout_width="@dimen/navigation_drawer_menu_icon_size"
        android:layout_height="@dimen/navigation_drawer_menu_icon_size"
        android:src="@drawable/ic_menu_home"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/item_drawer_menu_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/navigation_drawer_menu_horizontal_padding"
        android:text=""
        android:textColor="@color/navdrawer_text_color"
        android:textSize="@dimen/text_size_large" />
    
</LinearLayout>